<!doctype html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Пример на bootstrap 4: Одностраничный шаблон для создания простых и красивых домашних страниц.">

    <title>{% block title %}{% endblock %}</title>

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="{{ asset('bundles/app/bootstrap/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/app/bootstrap/js/bootstrap.bundle.min.js') }}">
    <link rel="stylesheet" href="{{ asset('bundles/app/js/jquery.js') }}">

</head>

<body class="">

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="dropdown-item" href="{{ path('homepage') }}">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="dropdown-item" href="{{ path('feedbackAction') }}">Feedback</a>
                    </li>
                    <li class="nav-item">
                        <a class="dropdown-item" href="{{ path('products_list') }}">Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="dropdown-item" href="{{ path('categories') }}">Categories</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    {% block body %}{% endblock %}
<footer>
    {% block footer %}{% endblock %}
</footer>
</body>
</html>
